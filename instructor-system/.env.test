# Test Environment Variables
NODE_ENV=test
VITE_USE_MOCK_DATA=true
VITE_API_BASE_URL=http://localhost:5173/api
VITE_ENABLE_DEBUG_LOGS=true

# Test-specific settings
PLAYWRIGHT_BROWSERS_PATH=0
PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=0

# Test timeout settings
TEST_TIMEOUT=30000
TEST_RETRY_COUNT=2

# Screenshot settings
SCREENSHOT_ON_FAILURE=true
FULL_PAGE_SCREENSHOTS=false

# Performance test thresholds
MAX_LOGIN_TIME=5000
MAX_API_RESPONSE_TIME=3000

# Hebrew/RTL testing
DEFAULT_LOCALE=he-IL
DEFAULT_TIMEZONE=Asia/Jerusalem
RTL_TESTING=true

# Accessibility testing
A11Y_TESTING=true
KEYBOARD_NAVIGATION_TESTING=true
SCREEN_READER_TESTING=true

# Visual regression testing
VISUAL_REGRESSION_THRESHOLD=0.2
UPDATE_SNAPSHOTS=false

# Mock data settings
MOCK_API_DELAY=0
MOCK_NETWORK_ERRORS=false
MOCK_RATE_LIMITING=false