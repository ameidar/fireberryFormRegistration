# Development Environment Configuration

# Fireberry API Configuration
VITE_FIREBERRY_API_KEY=your_fireberry_api_key_here

# Development Mode Settings
VITE_USE_MOCK_DATA=true
VITE_NODE_ENV=development

# Debug Settings
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug

# CORS Configuration
VITE_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# Rate Limiting Configuration
VITE_RATE_LIMIT_WINDOW_MS=60000
VITE_RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
VITE_SESSION_TIMEOUT_HOURS=8
VITE_SESSION_WARNING_MINUTES=30

# Features Flags
VITE_FEATURE_AUTO_REFRESH=true
VITE_FEATURE_OFFLINE_MODE=true