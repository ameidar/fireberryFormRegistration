# Production Environment Configuration

# Fireberry API Configuration
VITE_FIREBERRY_API_KEY=your_production_fireberry_api_key_here

# Production Mode Settings
VITE_USE_MOCK_DATA=false
VITE_NODE_ENV=production

# Debug Settings (disabled in production)
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error

# CORS Configuration (update with your production domains)
VITE_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting Configuration (more restrictive in production)
VITE_RATE_LIMIT_WINDOW_MS=60000
VITE_RATE_LIMIT_MAX_REQUESTS=50

# Session Configuration
VITE_SESSION_TIMEOUT_HOURS=4
VITE_SESSION_WARNING_MINUTES=15

# Features Flags
VITE_FEATURE_AUTO_REFRESH=false
VITE_FEATURE_OFFLINE_MODE=false

# Security Settings
VITE_SECURE_COOKIES=true
VITE_STRICT_SSL=true