# Fireberry API Configuration
FIREBERRY_API_KEY=your_fireberry_api_key_here

# Environment Configuration
NODE_ENV=development

# CORS Configuration - Comma-separated list of allowed origins
# In production, replace with your actual domain(s)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com,https://www.yourdomain.com

# Optional: Logging Configuration
LOG_LEVEL=info

# Optional: Cache Configuration (for production use Redis)
CACHE_TIMEOUT=300000

# Optional: Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60
REGISTRATION_RATE_LIMIT_WINDOW_MS=300000
REGISTRATION_RATE_LIMIT_MAX_REQUESTS=5